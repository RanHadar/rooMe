<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Apartment_searcher_tabs_classes.ApartmentSearcherHome">

    <!-- activity view -->
    <FrameLayout
        android:id="@+id/fl_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:background="@drawable/ic_house_back_img">

        <com.lorenzos.flingswipe.SwipeFlingAdapterView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_house_back_img"
            app:rotation_degrees="15.5" />

    </FrameLayout>


    <TextView
        android:id="@+id/tv_no_more_houses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_maybe_house"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="no houses to display , change your filters"
        android:textSize="20sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/btn_no_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_card"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-100dp"
        android:layout_toEndOf="@+id/btn_maybe_house"
        android:src="@drawable/ic_home_button" />

    <ImageView
        android:id="@+id/btn_yes_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_card"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-100dp"
        android:layout_marginEnd="50dp"
        android:layout_toStartOf="@+id/btn_maybe_house"
        android:src="@drawable/ic_home_button" />

    <ImageView
        android:id="@+id/btn_maybe_house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_card"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="0dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:src="@drawable/ic_home_button" />

</RelativeLayout>